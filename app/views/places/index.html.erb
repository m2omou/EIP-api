<h1>Listing places</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>longitude</th>
      <th>latitude</th>
      <th>name</th>
      <th>postcode</th>
      <th>city</th>
      <th>address</th>
      <th>country</th>
      <th>show</th>
      <th>edit</th>
      <th>delete</th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
      	<td><%= place.id %></td>
      	<td><%= place.longitude %></td>
      	<td><%= place.latitude %></td>
      	<td><%= place.name %></td>
      	<td><%= place.postcode %></td>
      	<td><%= place.city %></td>
      	<td><%= place.address %></td>
      	<td><%= place.country %></td>
        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

