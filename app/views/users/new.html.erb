<div class="container">

<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
<%= form_for @user, :html => {:multipart => true} do |f| %>
			<hr class="colorgraph">
			<div class="row">
				<div class="col-xs-6 col-sm-6 col-md-6">
					<div class="form-group">
					    <%= f.text_field :firstname, :class => "form-control input-lg", :placeholder => "First Name", :id => "first_name" %>
 					</div>
				</div>
				<div class="col-xs-6 col-sm-6 col-md-6">
					<div class="form-group">
					    <%= f.text_field :lastname, :class => "form-control input-lg", :placeholder => "Last Name", :id => "last_name" %>
 					</div>
				</div>
			</div>
			<div class="form-group">
				<%= f.text_field :username, :class => "form-control input-lg", :placeholder => "Display Name", :id => "display_name" %>
			</div>
			<div class="form-group">
				<%= f.text_field :email, :class => "form-control input-lg", :placeholder => "Email Address", :id => "email" %>
			</div>
			<div class="row">
				<div class="col-xs-6 col-sm-6 col-md-6">
					<div class="form-group">
						<%= f.password_field :password, :class => "form-control input-lg", :placeholder => "Password", :id => "password" %>
						
					</div>
				</div>
				<div class="col-xs-6 col-sm-6 col-md-6">
					<div class="form-group">
						<%= f.password_field :password, :class => "form-control input-lg", :placeholder => "Confirm Password", :id => "password_confirmation" %>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-6 col-sm-6 col-md-6">
					<div class="form-group">
						<%= f.file_field :avatar, :class => "form-control input-lg", :id => "avatar" %>
						
					</div>
				</div>
				
			</div>

			
			
			
			<hr class="colorgraph">
			<div class="row">
				<div class="col-xs-6 col-md-6"><input type="submit" value="Register" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
				
			</div>
<% end %>


	</div>
</div>
<!-- Modal -->
</div>



			