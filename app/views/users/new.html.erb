<div class="container">

<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
<%= form_for @user, :html => {:multipart => true} do |f| %>
<h2>Please Sign Up <small>It's free and always will be.</small></h2>
			<hr class="colorgraph">
			<div class="row">
				<div class="col-xs-6 col-sm-6 col-md-6">
					<div class="form-group">
					    <%= f.text_field :firstname, :class => "form-control input-lg", :placeholder => "First Name", :id => "first_name" %>
 					</div>
				</div>
				<div class="col-xs-6 col-sm-6 col-md-6">
					<div class="form-group">
					    <%= f.text_field :lastname, :class => "form-control input-lg", :placeholder => "Last Name", :id => "last_name" %>
 					</div>
				</div>
			</div>
			<div class="form-group">
				<%= f.text_field :username, :class => "form-control input-lg", :placeholder => "Display Name", :id => "display_name" %>
			</div>
			<div class="form-group">
				<%= f.text_field :email, :class => "form-control input-lg", :placeholder => "Email Address", :id => "email" %>
			</div>
			<div class="row">
				<div class="col-xs-6 col-sm-6 col-md-6">
					<div class="form-group">
						<%= f.text_field :password, :class => "form-control input-lg", :placeholder => "Password", :id => "password" %>
						
					</div>
				</div>
				<div class="col-xs-6 col-sm-6 col-md-6">
					<div class="form-group">
						<%= f.text_field :password, :class => "form-control input-lg", :placeholder => "Confirm Password", :id => "password_confirmation" %>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-6 col-sm-6 col-md-6">
					<div class="form-group">
						<%= f.file_field :avatar, :class => "form-control input-lg", :id => "avatar" %>
						
					</div>
				</div>
				
			</div>
			<div class="row">
				<div class="col-xs-3 col-sm-3 col-md-3">
					<span class="button-checkbox">
						<button type="button" class="btn" data-color="info" tabindex="7">I Agree</button>
                        <input type="checkbox" name="t_and_c" id="t_and_c" class="hidden" value="1">
					</span>
				</div>
				<div class="col-xs-9 col-sm-9 col-md-9">
					 By clicking <strong class="label label-primary">Register</strong>, you agree to the <a href="#" data-toggle="modal" data-target="#t_and_c_m" style="color:blue;">Terms and Conditions</a> set out by this site, including our Cookie Use.
				</div>
			</div>
			
			
			
			<hr class="colorgraph">
			<div class="row">
				<div class="col-xs-6 col-md-6"><input type="submit" value="Register" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
				
			</div>
<% end %>


	</div>
</div>
<!-- Modal -->
<div class="modal fade" id="t_and_c_m" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
				<h4 class="modal-title" id="myModalLabel">Terms & Conditions</h4>
			</div>
			<div class="modal-body">
				<p>Nos Terms & Conditions....</p>
				<p>Nos Terms & Conditions....</p>
				<p>Nos Terms & Conditions....</p>
				<p>Nos Terms & Conditions....</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" data-dismiss="modal">I Agree</button>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
</div>



			